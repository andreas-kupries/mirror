## mirror-vcs . . merge STORE-A STORE-B

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt::source support/invoke-vcs.tcl

# # ## ### ##### ######## ############# #####################

foreach vcs {
    fossil git github hg svn
} {
    test mirror-vcs-${vcs}-merge-1.0 "mirror-vcs $vcs merge - wrong args, not enough" -body {
	mvcs $vcs LOG merge
    } -result [err mirror-vcs/merge/wrongargs]
    
    test mirror-vcs-${vcs}-merge-1.1 "mirror-vcs $vcs merge - wrong args, not enough" -body {
	mvcs $vcs LOG merge STOREA
    } -result [err mirror-vcs/merge/wrongargs]
    
    test mirror-vcs-${vcs}-merge-1.2 "mirror-vcs $vcs merge - wrong args, too many" -body {
	mvcs $vcs LOG merge STOREA STOREB X
    } -result [err mirror-vcs/merge/wrongargs]
    
    test mirror-vcs-${vcs}-merge-2.0 "mirror-vcs $vcs merge - bad store" -setup {
	file mkdir STORE
    } -body {
	mvcs $vcs LOG merge BADSTORE STORE
    } -cleanup {
	file delete -force STORE
    } -result [err mirror-vcs/bad-store]
    
    test mirror-vcs-${vcs}-merge-2.1 "mirror-vcs $vcs merge - bad store" -setup {
	file mkdir STORE
    } -body {
	mvcs $vcs LOG merge STORE BADSTORE
    } -cleanup {
	file delete -force STORE
    } -result [err mirror-vcs/bad-store]
    
    test mirror-vcs-${vcs}-merge-3.0 "mirror-vcs $vcs merge result" -setup {
	set r {}
	file mkdir STOREA STOREB
    } -body {
	lappend r [mvcs $vcs LOG merge STOREA STOREB]
	lappend r [string trim [fileutil::cat LOG]]
    } -cleanup {
	unset r
	file delete -force LOG STOREA STOREB
    } -result [list \
       [ok mirror-vcs/empty] \
       [V  mirror-vcs/ok]]
}
    
# # ## ### ##### ######## ############# #####################
cleanupTests
return
