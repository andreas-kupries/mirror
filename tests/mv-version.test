## mirror-vcs . . version

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt::source support/invoke-vcs.tcl

# # ## ### ##### ######## ############# #####################

foreach vcs {
    fossil git github hg svn
} {
    test mirror-vcs-${vcs}-version-1.0 "mirror-vcs $vcs version - wrong args, too many" -body {
	mvcs $vcs LOG version X
    } -result [err mirror-vcs/version/wrongargs]

    test mirror-vcs-${vcs}-version-2.0 "mirror-vcs $vcs version result" -setup {
	set r {}
    } -body {
	lappend r [mvcs $vcs LOG version]
	lappend r [string trim [fileutil::cat LOG]]
    } -cleanup {
	unset r
	file delete LOG
    } -match glob -result [list \
       [ok mirror-vcs/version/p-$vcs] \
       [V  mirror-vcs/version/$vcs]]
}

# # ## ### ##### ######## ############# #####################
cleanupTests
return
