## submit a repository

kt check Tcl     8.5
kt check tcltest 2

# # ## ### ##### ######## ############# #####################

kt::source support/invoke.tcl

# # ## ### ##### ######## ############# #####################

test submit-1.0 {submit - wrong args, not enough} -body {
    mapp submit
} -result [err submit/wrongargs-notenough] -match glob

test submit-1.1 {submit - wrong args, not enough} -body {
    mapp submit URL
} -result [err submit/wrongargs-notenough] -match glob

test submit-1.2 {submit - wrong args, too many} -body {
    mapp submit URL EMAIL SUBMITTER X
} -result [err submit/wrongargs-toomany] -match glob

# # ## ### ##### ######## ############# #####################

lappend a2ex [ok submit/ok]
lappend a2ex [ok submit/ok-submissions]

test submit-2.0 {submit} -setup mdb-reset -body {
    lappend r [mapp submit [a-core] fox@hole.com]
    lappend r [mapp submissions]
    set r
} -cleanup {unset r a2ex} -match glob -result $a2ex

lappend a2ex [ok submit/ok-name]
lappend a2ex [ok submit/ok-name-submissions]

test submit-2.1 {submit, with name} -setup mdb-reset -body {
    lappend r [mapp submit [a-core] fox@hole.com {The Fox}]
    lappend r [mapp submissions]
    set r
} -cleanup {unset r a2ex} -match glob -result $a2ex

# # ## ### ##### ######## ############# #####################
cleanupTests
return
